    <!--<filter-name>LoginFilter</filter-name>-->
    <!--<url-pattern>/api/transfer/*</url-pattern>-->
  <!--</filter-mapping>-->
  <!--<filter-mapping>-->
    <!--<filter-name>LoginFilter</filter-name>-->
    <!--<url-pattern>/views/transfer/*</url-pattern>-->
  <!--</filter-mapping>-->
  <!--<filter-mapping>-->
    <!--<filter-name>LoginFilter</filter-name>-->
    <!--<url-pattern>/views/message/addMessage.jsp</url-pattern>-->
  <!--</filter-mapping>-->
  
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>